rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == 'satish@skids.health' ||
         request.auth.token.email == 'dr.satish@greybrain.ai' ||
         request.auth.token.email == 'balwant@greybrain.ai');
    }
    
    // Whitelist collection - allow reading for whitelist verification
    match /whitelist/{email} {
      // Allow reading whitelist status for authentication flow
      // This is needed for the sign-in process to check if user is whitelisted
      allow read: if true;
      
      // Only admins can write to whitelist
      allow write: if isAdmin();
    }
    
    // Access logs - users can only read/write their own logs
    match /access_logs/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // User data - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Analytics data - admin only
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if request.auth != null;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
